<% content_for :page_title, "Administrators" %>

<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Email</th>
            <th>Sign In Count</th>
            <th>Last Sign In</th>
            <th>Created At</th>
          </tr>
        </thead>
        <tbody>
          <% @super_admins.each do |admin| %>
            <tr>
              <td><%= admin.email %></td>
              <td><%= admin.sign_in_count %></td>
              <td><%= admin.last_sign_in_at&.strftime("%Y-%m-%d %H:%M") || "-" %></td>
              <td><%= admin.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
