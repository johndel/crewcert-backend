<div class="text-center mb-4">
  <p class="text-muted mb-1">CrewCert</p>
  <h1 class="h3 fw-bold text-dark mb-0">Admin Login</h1>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="fa-solid fa-check-circle me-2"></i>
    <%= flash[:notice] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="fa-solid fa-exclamation-circle me-2"></i>
    <%= flash[:alert] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<%= form_with url: super_admin_magic_links_path, method: :post, local: true do |form| %>
  <div class="mb-3">
    <%= form.email_field :email,
                         placeholder: "Email",
                         required: true,
                         autofocus: true,
                         autocomplete: "email",
                         class: "form-control" %>
    <p class="text-center small text-muted mb-4">
      Enter your email to receive a login link.
    </p>
  </div>

  <div class="d-grid mt-4">
    <%= form.button class: "btn btn-primary" do %>
      <i class="fa-solid fa-paper-plane"></i>
      Send login link
    <% end %>
  </div>
<% end %>

<hr class="mt-4 text-body-tertiary">

<div class="text-center">
  <small class="text-muted">
    &copy; <%= Date.current.year %> CrewCert.
  </small>
</div>
