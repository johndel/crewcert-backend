<%= form_with model: [:admin, certificate_type], class: "needs-validation" do |f| %>
  <% if certificate_type.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% certificate_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :code, class: "form-label" %>
    <%= f.text_field :code, class: "form-control #{'is-invalid' if certificate_type.errors[:code].any?}", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control #{'is-invalid' if certificate_type.errors[:name].any?}", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= f.label :validity_period_months, "Validity Period (months)", class: "form-label" %>
    <%= f.number_field :validity_period_months, class: "form-control", min: 1 %>
    <div class="form-text">Leave blank if certificate never expires.</div>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "Save Certificate Type", class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_certificate_types_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
