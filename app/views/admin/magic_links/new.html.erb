<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1>CrewCert</h1>
      <p class="text-muted">Admin Panel</p>
    </div>

    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= flash[:notice] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= flash[:alert] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <%= form_with url: admin_magic_links_path, method: :post, local: true do |f| %>
      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" name="email" id="email" class="form-control" placeholder="admin@example.com" required autofocus>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-paper-plane me-2"></i>Send Magic Link
        </button>
      </div>
    <% end %>
  </div>
</div>
