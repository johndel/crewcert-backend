<% content_for :header_actions do %>
  <%= button_to send_certificate_request_admin_crew_member_path(@crew_member),
      method: :post,
      class: "btn btn-primary",
      data: { turbo_confirm: "Send certificate upload request email to #{@crew_member.full_name}?" } do %>
    <i class="fas fa-envelope me-1"></i> Request Certificates
  <% end %>
  <%= link_to edit_admin_crew_member_path(@crew_member), class: "btn btn-outline-secondary" do %>
    <i class="fas fa-edit me-1"></i> Edit
  <% end %>
<% end %>

<div class="row g-4">
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Crew Member Details</h5>
      </div>
      <div class="card-body">
        <dl class="mb-0">
          <dt class="text-muted small">Name</dt>
          <dd class="mb-3"><%= @crew_member.full_name %></dd>

          <dt class="text-muted small">Email</dt>
          <dd class="mb-3"><%= @crew_member.email %></dd>

          <dt class="text-muted small">Phone</dt>
          <dd class="mb-3"><%= @crew_member.phone || "-" %></dd>

          <dt class="text-muted small">Vessel</dt>
          <dd class="mb-3"><%= link_to @crew_member.vessel.name, admin_vessel_path(@crew_member.vessel) %></dd>

          <dt class="text-muted small">Role</dt>
          <dd class="mb-0"><%= @crew_member.role.name %></dd>
        </dl>
      </div>
    </div>

    <div class="card mt-4">
      <div class="card-header">
        <h5 class="card-title mb-0">Certificate Compliance</h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <div class="d-flex justify-content-between mb-1">
            <span class="small">Compliance</span>
            <span class="small fw-medium"><%= @crew_member.certificate_compliance_percentage %>%</span>
          </div>
          <div class="progress" style="height: 8px;">
            <div class="progress-bar bg-success" role="progressbar" style="width: <%= @crew_member.certificate_compliance_percentage %>%"></div>
          </div>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-2">
          <span class="text-muted small">Required Certificates</span>
          <span class="badge bg-primary"><%= @required_certificates.count %></span>
        </div>
        <div class="d-flex justify-content-between align-items-center">
          <span class="text-muted small">Missing Certificates</span>
          <span class="badge bg-danger"><%= @missing_certificates.count %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Certificates</h5>
        <%= link_to new_admin_certificate_path(crew_member_id: @crew_member.id), class: "btn btn-primary btn-sm" do %>
          <i class="fas fa-plus me-1"></i> Add Certificate
        <% end %>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead>
              <tr>
                <th>Certificate</th>
                <th>Status</th>
                <th>Expiry Date</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @certificates.each do |certificate| %>
                <tr>
                  <td><%= certificate.certificate_type.display_name %></td>
                  <td>
                    <% case certificate.status %>
                    <% when 'pending' %>
                      <span class="badge bg-warning">Pending</span>
                    <% when 'processing' %>
                      <span class="badge bg-info">Processing</span>
                    <% when 'verified' %>
                      <span class="badge bg-success">Verified</span>
                    <% when 'rejected' %>
                      <span class="badge bg-danger">Rejected</span>
                    <% end %>
                  </td>
                  <td>
                    <% if certificate.expiry_date %>
                      <% if certificate.expired? %>
                        <span class="text-danger"><%= certificate.expiry_date.strftime("%b %d, %Y") %></span>
                      <% elsif certificate.expiring_soon? %>
                        <span class="text-warning"><%= certificate.expiry_date.strftime("%b %d, %Y") %></span>
                      <% else %>
                        <%= certificate.expiry_date.strftime("%b %d, %Y") %>
                      <% end %>
                    <% else %>
                      -
                    <% end %>
                  </td>
                  <td class="text-end">
                    <%= link_to admin_certificate_path(certificate), class: "btn btn-outline-secondary btn-sm" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              <% if @certificates.empty? %>
                <tr>
                  <td colspan="4" class="text-center text-muted py-4">No certificates on file.</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <% if @missing_certificates.any? %>
      <div class="card mt-4">
        <div class="card-header">
          <h5 class="card-title mb-0 text-danger">Missing Certificates</h5>
        </div>
        <div class="card-body">
          <ul class="mb-0">
            <% @missing_certificates.each do |ct| %>
              <li><%= ct.display_name %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
