<% content_for :header_actions do %>
  <%= link_to new_admin_crew_member_path, class: "btn btn-primary" do %>
    <i class="fas fa-plus me-1"></i> Add Crew Member
  <% end %>
<% end %>

<div class="card">
  <div class="card-header">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="card-title mb-0">Crew Members</h5>
      <%= search_form_for @q, url: admin_crew_members_path, html: { class: "d-flex gap-2" } do |f| %>
        <%= f.search_field :first_name_or_last_name_or_email_cont, class: "form-control form-control-sm", placeholder: "Search...", style: "width: 200px" %>
        <%= f.submit "Search", class: "btn btn-outline-secondary btn-sm" %>
      <% end %>
    </div>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Name</th>
            <th>Vessel</th>
            <th>Role</th>
            <th>Email</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @crew_members.each do |crew_member| %>
            <tr>
              <td>
                <%= link_to crew_member.full_name, admin_crew_member_path(crew_member), class: "text-decoration-none fw-medium" %>
              </td>
              <td><%= link_to crew_member.vessel.name, admin_vessel_path(crew_member.vessel), class: "text-decoration-none" %></td>
              <td><%= crew_member.role.name %></td>
              <td><%= crew_member.email %></td>
              <td class="text-end">
                <div class="btn-group btn-group-sm">
                  <%= link_to admin_crew_member_path(crew_member), class: "btn btn-outline-secondary" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_admin_crew_member_path(crew_member), class: "btn btn-outline-secondary" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
          <% if @crew_members.empty? %>
            <tr>
              <td colspan="5" class="text-center text-muted py-4">No crew members found.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <% if @pagy.pages > 1 %>
    <div class="card-footer">
      <%= pagy_bootstrap_nav(@pagy) %>
    </div>
  <% end %>
</div>
