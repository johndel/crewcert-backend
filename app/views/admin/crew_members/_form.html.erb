<%= form_with model: [:admin, crew_member], class: "needs-validation" do |f| %>
  <% if crew_member.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% crew_member.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :first_name, class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control #{'is-invalid' if crew_member.errors[:first_name].any?}", required: true %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.label :last_name, class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control #{'is-invalid' if crew_member.errors[:last_name].any?}", required: true %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control #{'is-invalid' if crew_member.errors[:email].any?}", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :phone, class: "form-label" %>
    <%= f.text_field :phone, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :vessel_id, "Vessel", class: "form-label" %>
      <%= f.collection_select :vessel_id, Vessel.ordered, :id, :name, { prompt: "Select a vessel" }, class: "form-select #{'is-invalid' if crew_member.errors[:vessel].any?}", required: true %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.label :role_id, "Role", class: "form-label" %>
      <%= f.collection_select :role_id, Role.ordered, :id, :name, { prompt: "Select a role" }, class: "form-select #{'is-invalid' if crew_member.errors[:role].any?}", required: true %>
    </div>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "Save Crew Member", class: "btn btn-primary" %>
    <%= link_to "Cancel", crew_member.persisted? ? admin_crew_member_path(crew_member) : admin_crew_members_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
