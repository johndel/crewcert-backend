<%= form_with model: [:admin, role], class: "needs-validation" do |f| %>
  <% if role.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% role.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control #{'is-invalid' if role.errors[:name].any?}", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :position, class: "form-label" %>
    <%= f.number_field :position, class: "form-control #{'is-invalid' if role.errors[:position].any?}", min: 1 %>
    <div class="form-text">Lower numbers appear first in lists.</div>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "Save Role", class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_roles_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
