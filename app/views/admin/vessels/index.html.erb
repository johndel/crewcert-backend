<% content_for :header_actions do %>
  <%= link_to new_admin_vessel_path, class: "btn btn-primary" do %>
    <i class="fas fa-plus me-1"></i> Add Vessel
  <% end %>
<% end %>

<div class="card">
  <div class="card-header">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="card-title mb-0">Vessels</h5>
      <%= search_form_for @q, url: admin_vessels_path, html: { class: "d-flex gap-2" } do |f| %>
        <%= f.search_field :name_or_imo_cont, class: "form-control form-control-sm", placeholder: "Search vessels...", style: "width: 200px" %>
        <%= f.submit "Search", class: "btn btn-outline-secondary btn-sm" %>
      <% end %>
    </div>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Name</th>
            <th>IMO</th>
            <th>Management Company</th>
            <th>Crew</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @vessels.each do |vessel| %>
            <tr>
              <td>
                <%= link_to vessel.name, admin_vessel_path(vessel), class: "text-decoration-none fw-medium" %>
              </td>
              <td><%= vessel.imo || "-" %></td>
              <td><%= vessel.management_company || "-" %></td>
              <td>
                <span class="badge bg-secondary"><%= vessel.crew_members.count %></span>
              </td>
              <td class="text-end">
                <div class="btn-group btn-group-sm">
                  <%= link_to admin_vessel_path(vessel), class: "btn btn-outline-secondary" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_admin_vessel_path(vessel), class: "btn btn-outline-secondary" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= button_to admin_vessel_path(vessel), method: :delete, class: "btn btn-outline-danger", data: { turbo_confirm: "Are you sure you want to delete this vessel?" } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
          <% if @vessels.empty? %>
            <tr>
              <td colspan="5" class="text-center text-muted py-4">
                No vessels found.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <% if @pagy.pages > 1 %>
    <div class="card-footer">
      <%= pagy_bootstrap_nav(@pagy) %>
    </div>
  <% end %>
</div>
